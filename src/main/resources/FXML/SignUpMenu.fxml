<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.SignUpMenuController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <TextField promptText="username" fx:id="username"/>
            <PasswordField promptText="password" fx:id="password"/>
            <PasswordField promptText="password confirmation" fx:id="passwordConfirmation"/>
            <Button text="Sign Up" onMouseClicked="#signUp"
        </VBox>
    </center>

</BorderPane>
